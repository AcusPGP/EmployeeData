<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="650.0" spacing="10.0"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="pham.phuc.employee_data.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Pane prefHeight="460.0" prefWidth="610.0">
        <children>
            <Label alignment="CENTER" layoutX="176.0" layoutY="14.0" prefHeight="33.0" prefWidth="260.0"
                   text="EMPLOYEE MANAGEMENT PROGRAM" textFill="RED">
                <font>
                    <Font name="System Bold" size="15.0"/>
                </font>
            </Label>
            <Pane blendMode="DARKEN" cache="true" layoutX="187.0" layoutY="47.0" prefHeight="331.0" prefWidth="237.0"
                  style="-fx-border-color: Black;">
                <children>
                    <Label alignment="CENTER" layoutX="16.0" layoutY="8.0" prefHeight="26.0"
                           prefWidth="205.0" text="MENU" textAlignment="CENTER" underline="true">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Label>
                    <Label alignment="CENTER" layoutX="5.0" layoutY="34.0" prefHeight="26.0"
                           prefWidth="227.0" text="Please choose an option down below" textAlignment="CENTER">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                    <Button layoutX="92.0" layoutY="73.0" mnemonicParsing="false" onAction="#onAddButtonClick"
                            prefHeight="30.0" prefWidth="94.0" text="Add">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button layoutX="92.0" layoutY="124.0" mnemonicParsing="false" onAction="#onShowButtonClick" prefHeight="30.0" prefWidth="94.0"
                            text="Show">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button layoutX="92.0" layoutY="178.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="94.0"
                            text="Edit">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button layoutX="92.0" layoutY="228.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="94.0"
                            text="Delete">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <Button layoutX="92.0" layoutY="277.0" mnemonicParsing="false" onAction="#onExitButtonCLick"
                            prefHeight="30.0" prefWidth="94.0" text="Exit" textFill="RED">
                        <font>
                            <Font size="15.0"/>
                        </font>
                    </Button>
                    <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="55.0" layoutY="76.0" pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@photo/Add.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="55.0" layoutY="127.0" pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@photo/Show.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="54.0" layoutY="181.0" pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@photo/Edit.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="55.0" layoutY="231.0" pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@photo/Delete.png"/>
                        </image>
                    </ImageView>
                    <ImageView fitHeight="26.0" fitWidth="24.0" layoutX="57.0" layoutY="280.0" pickOnBounds="true"
                               preserveRatio="true">
                        <image>
                            <Image url="@photo/Exit.png"/>
                        </image>
                    </ImageView>
                </children>
            </Pane>
        </children>
    </Pane>
</VBox>
