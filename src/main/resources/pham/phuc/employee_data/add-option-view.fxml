                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Button layoutX="193.0" layoutY="260.0" mnemonicParsing="false" onAction="#onAddExceptionClick" prefHeight="40.0" prefWidth="227.0" text="3. Add exception case">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
            </children>
        </Pane>
    </children>
</VBox>
