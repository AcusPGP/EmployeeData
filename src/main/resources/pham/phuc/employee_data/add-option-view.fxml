    <children>
        <Pane prefHeight="500.0" prefWidth="650.0">
            <children>
                <Label alignment="CENTER" layoutX="200.0" layoutY="-1.0" prefHeight="30.0" prefWidth="210.0" text="Adding Employee Information" textAlignment="CENTER" textFill="RED">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Label>
                <Line endX="508.5" layoutX="102.0" layoutY="339.0" startX="-100.0" />
                <Button layoutX="200.0" layoutY="388.0" mnemonicParsing="false" onAction="#onAddReturnClick" prefHeight="30.0" prefWidth="100.0" text="Return">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Button layoutX="310.0" layoutY="388.0" mnemonicParsing="false" onAction="#onExitButtonCLick" prefHeight="30.0" prefWidth="100.0" text="Exit" textFill="RED">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Button>
                <Line endX="508.5" layoutX="101.0" layoutY="29.0" startX="-100.0" />
